{% extends 'base.html.twig' %}

{% block body %}

    {% set i = 1 %}

    <table class="table table-bordered">
        {% for user in users %}
            <tr>
                <td>#{{ i }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.score }}</td>
            </tr>

            {% set i = i+1 %}
        {% endfor %}
    </table>
{% endblock %}
